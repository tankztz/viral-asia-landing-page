---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Viral Asia is a leading social media marketing company in Singapore that helps businesses grow their online presence"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=Hanken+Grotesk:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  section {
    background-color: #141414;
  }
  h1,
  h2,
  li {
    font-family: "Anton", "sans-serif";
  }
  p {
    font-family: "Hanken Grotesk", "sans-serif";
  }
  .purpleBG {
    background-color: #5514ff;
  }
  .purpleText {
    color: #5514ff;
  }
  .whiteText {
    color: #dfdede;
  }
</style>
