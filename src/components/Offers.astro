---
const offers = [
  {
    imageURL: "ad_posting.png",
    offerText: "VERTICAL video production",
    tailwindClass: "w-full h-[28rem]",
    bgSize: "contain"
  },
  {
    imageURL: "smm.png",
    offerText: "Managing your social media",
    tailwindClass: "w-full h-[28rem]",
    bgSize: "contain"
  },
  {
    imageURL: "influencer.png",
    offerText: "Influencer marketing",
    tailwindClass: "w-full h-[28rem] bg-top"
  },
  {
    imageURL: "models.jpg",
    offerText: "In house models",
    tailwindClass: "w-full h-[28rem]"
  },
];
---

<section class="py-16 text-center">
  <h1 class="purpleText text-5xl italic uppercase mb-4">What we offer</h1>
  <p class="text-white text-xl mb-12">We offer a wide range of services to help your business grow</p>
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-2 2xl:grid-cols-4 gap-8">
    {
      offers.map((offer) => (
        <div class="flex flex-col items-center bg-gradient-to-b from-[#392F5A] to-[#20183A] rounded-lg p-6 shadow-lg">
          <h3 class="text-white uppercase text-3xl italic mb-8">{offer.offerText}</h3>
          <div 
            class={`${offer.tailwindClass} bg-no-repeat bg-center rounded-md`}
            style={`background-image: url(/images/${offer.imageURL}); background-size: ${offer.bgSize || 'cover'};`}
          ></div>
        </div>
      ))
    }
  </div>
</section>
