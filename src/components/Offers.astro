---
import ImageCard from "./ImageCard.astro";
const offers = [
  {
    imageURL: "ad_posting.png",
    offerText: "VERTICAL video production",
  },
  {
    imageURL: "smm.png",
    offerText: "Managing your social media",
  },
  {
    imageURL: "influencer.png",
    offerText: "Influencers marketing",
  },
];
---

<section class="py-16 text-center">
  <h1 class="purpleText text-5xl italic uppercase mb-4">What we offer</h1>
  <p class="text-white text-xl mb-12">We offer a wide range of services to help your business grow</p>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {
      offers.map((offer) => (
        <div class="flex flex-col items-center bg-gradient-to-b from-purple-900 to-pink-900 rounded-lg p-6 shadow-lg">
          <h3 class="text-white uppercase text-3xl italic mb-8">{offer.offerText}</h3>
          <ImageCard imageURL={offer.imageURL} />
        </div>
      ))
    }
  </div>
</section>
